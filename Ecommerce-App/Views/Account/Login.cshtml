@using Ecommerce_App.ViewModels
@model LoginUserViewModel

@{
    Layout = "RegisterLayout";
    ViewBag.Title = "Login";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<section class="text-center text-lg-start my-5">
    <div class="container">
        <div class="card shadow-lg border-0 rounded-4">
            <div class="row g-0">
                <div class="col-lg-5 d-none d-lg-block">
                    <img src="https://mdbootstrap.com/img/new/ecommerce/vertical/004.jpg"
                         class="img-fluid h-100 w-100 object-fit-cover rounded-start-4" alt="Login Image" />
                </div>
                <div class="col-lg-7">
                    <div class="card-body px-5 py-4">
                        <h3 class="fw-bold text-center mb-4">
                            <i class="bi bi-person-circle me-2"></i> Welcome Back!
                        </h3>

                        <form asp-action="SaveLogin" method="post">
                            <div asp-validation-summary="All" class="text-danger mb-3 text-start"></div>

                            <!-- Username -->
                            <div class="mb-3">
                                <label asp-for="Name" class="form-label fw-semibold">
                                    <i class="bi bi-person-fill me-1 text-primary"></i> Username
                                </label>
                                <input asp-for="Name" class="form-control form-control-lg shadow-sm rounded-3" />
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>

                            <!-- Password -->
                            <div class="mb-3">
                                <label asp-for="Password" class="form-label fw-semibold">
                                    <i class="bi bi-lock-fill me-1 text-primary"></i> Password
                                </label>
                                <input asp-for="Password" class="form-control form-control-lg shadow-sm rounded-3" />
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>

                            <!-- Remember Me -->
                            <div class="mb-3 form-check text-start">
                                <input class="form-check-input" asp-for="RememberMe" />
                                <label class="form-check-label"> Remember me </label>
                            </div>

                            <!-- Buttons -->
                            <div class="d-grid mb-3">
                                <button type="submit" class="btn btn-primary btn-lg rounded-pill">
                                    <i class="bi bi-box-arrow-in-right me-1"></i> Sign In
                                </button>
                            </div>

                            <div class="text-center">
                                <span class="text-muted">Don't have an account?</span>
                                <a asp-action="Register" asp-controller="Account" class="btn btn-outline-secondary btn-sm ms-2 rounded-pill">
                                    <i class="bi bi-person-plus-fill me-1"></i> Create New Account
                                </a>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
