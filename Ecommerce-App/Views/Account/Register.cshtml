@using Ecommerce_App.ViewModels
@model RegisterViewModel

@{
    Layout = "RegisterLayout";
    ViewBag.Title = "Register";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<section class="text-center text-lg-start my-5">
    <div class="container">
        <div class="row g-4 align-items-center justify-content-center">
            <!-- Register Form -->
            <div class="col-lg-6">
                <div class="card bg-body-tertiary shadow-lg border-0 rounded-4 p-4">
                    <div class="card-body">
                        <h3 class="fw-bold text-center mb-4">
                            <i class="bi bi-person-plus-fill me-2"></i> Create Your Account
                        </h3>

                        <form asp-action="SaveRegister" method="post">
                            <div asp-validation-summary="All" class="text-danger mb-3 text-start"></div>

                            <div class="row">
                                <!-- First Name -->
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-semibold" asp-for="FirstName">
                                        <i class="bi bi-person-fill me-1 text-primary"></i> First Name
                                    </label>
                                    <input asp-for="FirstName" class="form-control form-control-lg shadow-sm rounded-3" />
                                    <span asp-validation-for="FirstName" class="text-danger small"></span>
                                </div>

                                <!-- Last Name -->
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-semibold" asp-for="LastName">
                                        <i class="bi bi-person-fill me-1 text-primary"></i> Last Name
                                    </label>
                                    <input asp-for="LastName" class="form-control form-control-lg shadow-sm rounded-3" />
                                    <span asp-validation-for="LastName" class="text-danger small"></span>
                                </div>

                                <!-- User Name -->
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-semibold" asp-for="UserName">
                                        <i class="bi bi-person-badge-fill me-1 text-primary"></i> Username
                                    </label>
                                    <input asp-for="UserName" class="form-control form-control-lg shadow-sm rounded-3" />
                                    <span asp-validation-for="UserName" class="text-danger small"></span>
                                </div>

                                <!-- Address -->
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-semibold" asp-for="Address">
                                        <i class="bi bi-geo-alt-fill me-1 text-primary"></i> Address
                                    </label>
                                    <input asp-for="Address" class="form-control form-control-lg shadow-sm rounded-3" />
                                    <span asp-validation-for="Address" class="text-danger small"></span>
                                </div>

                                <!-- User Type -->
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-semibold" asp-for="UserType">
                                        <i class="bi bi-person-lines-fill me-1 text-primary"></i> User Type
                                    </label>
                                    <select asp-for="UserType" class="form-control form-control-lg shadow-sm rounded-3">
                                        <option value="">-- Select User Type --</option>
                                        <option value="Customer">Customer</option>
                                        <option value="Buyer">Buyer</option>
                                    </select>
                                    <span asp-validation-for="UserType" class="text-danger small"></span>
                                </div>

                                <!-- Email -->
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-semibold" asp-for="Email">
                                        <i class="bi bi-envelope-fill me-1 text-primary"></i> Email
                                    </label>
                                    <input asp-for="Email" class="form-control form-control-lg shadow-sm rounded-3" />
                                    <span asp-validation-for="Email" class="text-danger small"></span>
                                </div>

                                <!-- Password -->
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-semibold" asp-for="Password">
                                        <i class="bi bi-lock-fill me-1 text-primary"></i> Password
                                    </label>
                                    <input asp-for="Password" type="password" class="form-control form-control-lg shadow-sm rounded-3" />
                                    <span asp-validation-for="Password" class="text-danger small"></span>
                                </div>

                                <!-- Confirm Password -->
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-semibold" asp-for="ConfirmPassword">
                                        <i class="bi bi-shield-lock-fill me-1 text-primary"></i> Confirm Password
                                    </label>
                                    <input asp-for="ConfirmPassword" type="password" class="form-control form-control-lg shadow-sm rounded-3" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="d-grid mb-4">
                                <button type="submit" class="btn btn-primary btn-lg rounded-pill">
                                    <i class="bi bi-person-check-fill me-1"></i> Sign Up
                                </button>
                            </div>

                            
                        </form>
                    </div>
                </div>
            </div>

            <!-- Image -->
            <div class="col-lg-6 text-center">
                <img src="https://mdbootstrap.com/img/new/ecommerce/vertical/004.jpg"
                     class="w-100 rounded-4 shadow-lg" alt="Register Image" />
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
