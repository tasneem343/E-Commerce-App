@using Ecommerce_App.ViewModels
@model EditUserProfileViewModel

@{
    Layout = "RegisterLayout";
    ViewBag.Title = "Edit Profile";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<div class="container mt-5">
    <div class="card shadow rounded-4 p-4 bg-light">
        <h3 class="text-center text-primary mb-4"><i class="bi bi-pencil-square me-2"></i>Edit Your Profile</h3>

        <form asp-action="SaveProfile" asp-controller="Profile" method="post">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="FullName" class="form-label fw-semibold"><i class="bi bi-person-fill me-1 text-primary"></i> Full Name</label>
                <input asp-for="FullName" class="form-control form-control-lg rounded-3 shadow-sm" />
                <span asp-validation-for="FullName" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Address" class="form-label fw-semibold"><i class="bi bi-geo-alt-fill me-1 text-primary"></i> Address</label>
                <input asp-for="Address" class="form-control form-control-lg rounded-3 shadow-sm" />
                <span asp-validation-for="Address" class="text-danger small"></span>
            </div>

            

            <div class="d-grid mt-4">
                <button type="submit" class="btn btn-success btn-lg rounded-pill">
                    <i class="bi bi-save2-fill me-1"></i> Save Changes
                </button>
            </div>
        </form>
    </div>
</div>
