@using Ecommerce_App.ViewModels
@model UserProfileViewModel

@{
    Layout = "RegisterLayout";
    ViewBag.Title = "User Profile";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4 p-5 bg-light">
        <div class="text-center mb-4">
            <i class="bi bi-person-circle fs-1 text-primary"></i>
            <h3 class="fw-bold mt-2 text-primary">User Profile</h3>
            <p class="text-muted">View your personal information</p>
        </div>

        <dl class="row fs-5">
            <dt class="col-sm-4 text-secondary"><i class="bi bi-person-badge me-2"></i> Username:</dt>
            <dd class="col-sm-8">@Model.UserName</dd>

            <dt class="col-sm-4 text-secondary"><i class="bi bi-person-lines-fill me-2"></i> Full Name:</dt>
            <dd class="col-sm-8">@Model.FullName</dd>

            <dt class="col-sm-4 text-secondary"><i class="bi bi-envelope-fill me-2"></i> Email:</dt>
            <dd class="col-sm-8">@Model.Email</dd>

            <dt class="col-sm-4 text-secondary"><i class="bi bi-geo-alt-fill me-2"></i> Address:</dt>
            <dd class="col-sm-8">@Model.Address</dd>

            <dt class="col-sm-4 text-secondary"><i class="bi bi-person-check-fill me-2"></i> User Type:</dt>
            <dd class="col-sm-8">@Model.UserType</dd>
        </dl>

        <div class="text-center mt-4">
            <a asp-action="EditProfile" asp-controller="Profile" class="btn btn-outline-primary btn-lg rounded-pill px-4">
                <i class="bi bi-pencil-square me-1"></i> Edit Profile
            </a>
        </div>
    </div>
</div>
