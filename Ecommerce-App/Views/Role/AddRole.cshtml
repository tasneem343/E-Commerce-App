@model Ecommerce_App.ViewModels.RoleViewModel

@{

    Layout = "RegisterLayout";
    ViewBag.Title = "Role";
}

<h2 class="text-center mb-4">Add New Role</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg rounded-4 border-0">
            <div class="card-body p-4">
                <form asp-action="SaveRole" novalidate>
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="RoleName" class="form-label fw-semibold"></label>
                        <input asp-for="RoleName" class="form-control" placeholder="Enter role name" />
                        <span asp-validation-for="RoleName" class="text-danger"></span>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Create Role</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="text-center mt-3">
            <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
